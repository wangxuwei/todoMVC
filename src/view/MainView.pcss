.MainView{
	height: 100%;
	display: flex;
	flex-direction: column;
	&-header{
		@mixin clearfix;
		.navbar{
			margin-bottom: 0px;
		}
		.app-logo{
			float:left;
			font-size: 26px;
			margin: 8px 16px;
		}
		.log-off{
			margin: 16px;
			cursor: pointer;
		}
	}
	.MainView-content{
		width: 800px;
		margin: auto;
		display: flex;
		flex-direction: column;
		flex: 1;
	}
}