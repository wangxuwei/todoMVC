<div class="TodoPopup Popup">
	<div class="Popup-screen"/>
	<div class="Popup-con" tabindex="0">
		<div class="popup-modal modal-content">
			<div class="popup-header modal-header">
				<div class="modal-title">Task Edit</div>
			</div>
			<div class="popup-body modal-body">
				<div class="form-group c-ctl-group">
					<div class="control-label">Task Name: </div>
					<input name="name" type="text" class="form-control c-control dx dx-name"  autofocus placeholder="Enter Task Name">
				</div>
				<div class="form-group c-ctl-group state-group">
					<div class="check-label">Status: </div>
